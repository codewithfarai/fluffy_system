[Service]
ExecStart=
{% if docker_daemon_config.tls is defined and docker_daemon_config.tls %}
ExecStart=/usr/bin/dockerd -H unix:///var/run/docker.sock -H tcp://0.0.0.0:2376 --containerd=/run/containerd/containerd.sock
{% else %}
ExecStart=/usr/bin/dockerd -H fd:// --containerd=/run/containerd/containerd.sock
{% endif %}
LimitNOFILE=1048576
LimitNPROC=1048576
LimitCORE=infinity
TasksMax=infinity
Delegate=yes
KillMode=process
Restart=always
RestartSec=5